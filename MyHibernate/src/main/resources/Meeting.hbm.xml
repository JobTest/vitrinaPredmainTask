<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.domain">
    <class name="Meeting" table="meeting">
        <id name="meetingId" column="meeting_id" type="java.lang.Long">
            <generator class="native"/>
        </id>
        <property name="subject" column="subject"/>
        <property name="meetingDate" column="meeting_date" type="date"/>
        <set name="employees" table="employee_meeting" inverse="true" lazy="true" fetch="select">
            <key column="employee_id"/>
            <many-to-many class="Meeting" column="meeting_id"/>
        </set>
    </class>
</hibernate-mapping>