<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- proprties -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/vitrina</property>
        <property name="connection.username">root</property>
        <property name="connection.password">1111</property>
        <property name="connection.pool_size">10</property>
        <property name="connection.useUnicode">true</property>
        <property name="connection.characterEncoding">UTF-8</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.connection.autocomit">false</property>
        <property name="current_session_context_class">thread</property>

        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="ibernate.cache.provider_class">org.hibernate.cache.EhCacheProvide</property>

        <!-- mapping files -->
        <mapping class="com.domain.Miratex" />
    </session-factory>
</hibernate-configuration>